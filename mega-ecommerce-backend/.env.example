# ===================================================================
# Mega E-Commerce Backend - Environment Variables
# Copy this file to .env and fill in your values
# ===================================================================

# ==================== Server Configuration ====================
NODE_ENV=development
PORT=5000

# ==================== URLs ====================
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ==================== Database ====================
DATABASE_URL=mongodb://localhost:27017/mega-ecommerce
# For MongoDB Atlas:
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/mega-ecommerce

# ==================== JWT Configuration ====================
JWT_ACCESS_SECRET=your-super-secret-access-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ==================== Bcrypt ====================
BCRYPT_SALT_ROUNDS=12

# ==================== Cloudinary (Image Upload) ====================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================== Email Configuration ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@megaecommerce.com

# ==================== SSLCommerz Payment Gateway ====================
# For testing: use sandbox credentials
SSL_STORE_ID=testbox
SSL_STORE_PASSWORD=qwerty
SSL_IS_LIVE=false
# For production:
# SSL_IS_LIVE=true

# ==================== bKash Payment Gateway ====================
# Get credentials from bKash merchant portal
BKASH_APP_KEY=
BKASH_APP_SECRET=
BKASH_USERNAME=
BKASH_PASSWORD=
BKASH_IS_LIVE=false

# ==================== Nagad Payment Gateway ====================
NAGAD_MERCHANT_ID=
NAGAD_PUBLIC_KEY=
NAGAD_PRIVATE_KEY=
NAGAD_IS_LIVE=false
